

<div class="shopper">
  <div id='columns'>
    <div id='side' >

      <div id='cart'>


      </div>
    </div>
    <div id='main' >

      <br><h3><a href = "http://localhost:3000/">Home</a></h3>
      <%= form_with(model: @shopper) do |form| %>
      <div class="field">
        <h3>
        <%= form.label :Name %>
        <%= form.text_field :name %>
        </h3>
      </div>

      <div class="field">
        <h3>
        <%= form.label :Userid %>
        <%= form.text_field :userid %>
        </h3>
      </div>

      <div class="field">
        <h3>
        <%= form.label :Password %>
        <%= form.password_field :password %>
        </h3>
      </div>

      <div class="field">
        <h3>
        <%= form.label :Email %>
        <%= form.email_field :email %>
        </h3>
      </div>

      <div class="field">
        <%= form.submit :Register %>
      </div>
      <% end %>


    </div>

  </div>
</div>
