<div class="shopper">
  <div id='columns'>
    <div id='side' >

      <div id='cart'>


      </div>
    </div>
    <div id='main' >

      <%= form_with(model: @shopper) do |form| %>
        <%= form.submit :"<- Back", name: "back", value: "<- Back" %>
      <% end %>

      <h1>Review your shopping cart</h1>

      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Product Quantity</th>
            <th>Total Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% total1 = 0 %>
          <% @userCart.each do |cartItem| %>
            <tr>
              <%= form_with(model: @shopper) do |form| %>
                <td><%= cartItem.productName %></td>
                <%= form.hidden_field :cartItemProductName, value: cartItem.productName %>

                <td><%= cartItem.quantity %></td>
                <%= form.hidden_field :cartItemQuantity, value: cartItem.quantity %>

                <td><%= cartItem.cost %></td>
                <%= form.hidden_field :cartItemCost, value: cartItem.cost %>


              <% end %>
            </tr>
             <% total1 = total1 + cartItem.cost%>
          <% end %>

          <tr><td colspan="3"> Total Amount= <%= total1 %></td></tr>

        </tbody>

      </table>

        <br>

      <%= form_with(model: @shopper) do |form| %>

        <%= form.label :Name %>
        <%= form.text_field :name %>

        <%= form.label :Address %>
        <%= form.text_field :address %>

        <%= form.label :"Credit Card Number" %>
        <%= form.text_field :creditCardNo %>
        <br><br>
        <%= form.submit :"Place Order", name: "placeOrder", value: "Place Order" %>
      <% end %>



    </div>

  </div>
</div>
